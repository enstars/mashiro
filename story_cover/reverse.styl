.reverse
    .grid-wrapper
        grid-template-columns: 2fr 1fr 10% 22%
    .preview-background
        grid-column: 3/5
        border-radius: 0 5px 5px 0
        mask-image: linear-gradient(to left, #000 70%, transparent 100%)
        -webkit-mask-image: linear-gradient(to left, #000 70%, transparent 100%)
        background-position: top 35% left 50%
    .preview-box
        grid-column: 1/4

.preview-background, .preview-box
    grid-row-start: 1
    grid-column-end: span 3

.reverse .preview-background, .reverse .preview-box
    grid-column-end: 3 span
