.story-wrapper .tab-content, .tab-header
    font-size: .9em

.chapter-area > .mini-talk__open:after, .tab-header__open:first-child:after
    transform: rotate(180deg)

@css {
  .story-wrapper .tab-header {
    background: rgba(var(--storyColor-rgb), .1);
    font-weight: 700;
    border-radius: 5px;
    cursor: pointer;
    padding: 8px;
    display: flex;
    justify-content: space-between;
  }
}

.story-wrapper
    .tab-content
        display: none
        padding: 10px
        & > .tab-item
            &:first-child
                padding: 0 0 8px 0
            &:not(:first-child)
                border-top: solid 1px #eff0f4
                padding: 8px 0
            &:last-child
                padding: 8px 0 0 0
    .tab-header
        &:first-child
            &:after
                content: '\e5cf'
                display: inline-block
                font-family: 'Material Icons Round'
                font-size: 1.5em
                line-height: 1
                transition: transform .4s ease
    .tab-item
        & > .label
            font-weight: 700
            font-size: .89em
        & > .value
            margin-left: 10px
